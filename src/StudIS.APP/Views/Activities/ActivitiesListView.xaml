<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       xmlns:vm="clr-namespace:StudIS.APP.ViewModels.Activity"
                       xmlns:views="clr-namespace:StudIS.APP.Views"
                       x:Class="StudIS.APP.Views.Activities.ActivitiesListView"
                       x:DataType="vm:ActivityListViewModel"
                       x:Name="ActivityListPageRoot">
<ScrollView>
        <StackLayout Padding="10">
            <!-- Header Section -->
            <Label Text="Activities" FontSize="Large" FontAttributes="Bold" Margin="0,10,0,10" />

            <!-- Add Activity Button -->
            <Button Text="Add Activity" HorizontalOptions="End" Command="{Binding GoToCreateAsyncCommand}" />

            <!-- Activities List -->
            <CollectionView ItemsSource="{Binding Activities}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="Black" Padding="10" Margin="0,10,0,0">
                            <StackLayout>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Label Text="{Binding ActivityType}" Grid.Column="0" VerticalOptions="Center"/>
                                    <Label Text="{Binding Description}" Grid.Column="1" VerticalOptions="Center"/>
                                    <Label Text="{Binding StartTime, StringFormat='{0:MM/dd/yyyy HH:mm}'}" Grid.Column="2" VerticalOptions="Center"/>
                                    <Label Text="{Binding EndTime, StringFormat='{0:MM/dd/yyyy HH:mm}'}" Grid.Column="3" VerticalOptions="Center"/>
                                    <Label Text="{Binding Room}" Grid.Column="4" VerticalOptions="Center"/>
                                    <Button Text="Details" Grid.Column="5" VerticalOptions="Center" Command="{Binding Path=BindingContext.GoToDetailAsyncCommand, Source={x:Reference ActivityListPageRoot}}" CommandParameter="{Binding Id}"/>
                                </Grid>
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>
</views:ContentPageBase>
