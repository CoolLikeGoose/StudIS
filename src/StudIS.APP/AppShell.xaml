<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="StudIS.APP.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:StudIS.APP"
    Shell.FlyoutBehavior="Disabled"
    Title="StudIS">
    
    <TabBar>
        <Tab Title="Main">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>
        <Tab Title="Students">
            <ShellContent
                Title="Students"
                ContentTemplate="{DataTemplate local:StudentsPage}"
                Route="StudentsPage" />
        </Tab>
        <Tab Title="Subjects">
            <ShellContent
                Title="Subjects"
                ContentTemplate="{DataTemplate local:SubjectsPage}"
                Route="SubjectsPage" />
        </Tab>
        <Tab Title="Activities">
            <ShellContent
                Title="Activities"
                ContentTemplate="{DataTemplate local:ActivitiesPage}"
                Route="ActivitiesPage" />
        </Tab>
    </TabBar>

</Shell>
